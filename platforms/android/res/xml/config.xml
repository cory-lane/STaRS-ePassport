<?xml version='1.0' encoding='utf-8'?>
<widget id="edu.ggc.ePassport" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="BarcodeScanner">
        <param name="android-package" value="com.phonegap.plugins.barcodescanner.BarcodeScanner" />
    </feature>
    <feature name="EmailComposer">
        <param name="android-package" value="de.appplant.cordova.emailcomposer.EmailComposer" />
    </feature>
    <feature name="GoHomePlugin">
        <param name="android-package" value="me.tassoevan.cordova.GoHomePlugin" />
    </feature>
    <allow-intent href="market:*" />
    <name>STaRS ePassport</name>
    <description>
        A simple reporting tool that allows students to scar QR codes at event booths and prove presence to their
        professor through email.
    </description>
    <author email="jcory3761@gmail.com" href="www.ggc.edu">
        Cory Johnson and Ryan Muhlbauer
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
</widget>
