<?xml version='1.0' encoding='utf-8'?>
<widget id="edu.ggc.ePassport" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>STaRS ePassport</name>
    <description>
        A simple reporting tool that allows students to scar QR codes at event booths and prove presence to their
        professor through email.
    </description>
    <author email="jcory3761@gmail.com" href="www.ggc.edu">
        Cory Johnson and Ryan Muhlbauer
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
